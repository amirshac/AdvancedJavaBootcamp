package javabootcamp.oopexam.ElectricToy;

import javabootcamp.oopexam.Toy.*;

public class ElectricToy extends Toy{
	private int batteries;
	private int soundLevel;
	
	
	@Override
	public void Play() {
		super.Play();
		this.setSoundLevel(this.sounLevel-1);
	}
	
	@Override
	public String toString() {
		return "ElectricToy [batteries=" + batteries + ", soundLevel=" + soundLevel + "]";
	}
	
	// setters getters
	public int getBatteries() {
		return batteries;
	}
	public void setBatteries(int batteries) {
		this.batteries = batteries;
	}
	public int getSoundLevel() {
		return soundLevel;
	}
	public void setSoundLevel(int soundLevel) {
		this.soundLevel = soundLevel;
	}
	
	
	
}
