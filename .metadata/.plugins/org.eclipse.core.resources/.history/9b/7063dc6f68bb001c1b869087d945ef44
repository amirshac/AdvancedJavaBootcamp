package Library;

public class BorrowableBook extends Books implements Borrowable {

	private int borrowingDays;
	
	public BorrowableBook(String name, int quantity, int borrowingDays) {
		super(name, quantity);
		this.borrowingDays = borrowingDays;
		actionsToRandomize = 3;
	}
	
	@Override
	public void approach() {
		
	}

	public void borrow() {
		
	}
	
	public String toString() {
		String msg = new String();
		msg = super.toString();
		msg += String.format(" <Borrowing> Days: %d", borrowingDays);
		return msg;
	}
}
