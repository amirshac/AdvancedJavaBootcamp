package VendingMachine.VendingMachine;

public class ColdDrink extends Drink{
	
	//fields
	protected int ingridient;
	
	private static int MIN_TEMPRATURE = 2;
	private static int MAX_TEMPRATURE = 5;
	
	public ColdDrink(String name, int volume, int price, int temprature) {
		super(name, price, volume, temprature);
		this.setTemprature(temprature);
	}
	
	public ColdDrink(String name, int volume, int price) {
		this(name, volume, price, 5);
	}
	
	public ColdDrink(String name, int volume) {
		this(name, volume, 7);
	}
	
	public ColdDrink(String name) {
		this(name, DEF_VOLUME);
	}
	
	public ColdDrink() {
		this(DEF_NAME);
	}
	
	@Override
	public void setTemprature(int temprature) {
		if (temprature < MIN_TEMPRATURE)
			this.temprature = MIN_TEMPRATURE;
		else if (temprature > MAX_TEMPRATURE)
			this.temprature = MAX_TEMPRATURE;
	}
	
	@Override
	public void produce() {
		super.produce();
	}
	
	@Override
	public String toString() {
		String msg = new String();
		msg = super.toString();
		msg += String.format("%n<ColdDrink> ingridient: %d ", this.ingridient);
		return msg;
	}

}
