package VendingMachine.VendingMachine; 

public class Soda extends ColdDrink implements Containerable{
	
	protected ContainerType container;
	
	// constructors
	public Soda() {
		super("Soda", 100, 7, 2);
		this.ingridient = 0;
		this.container = ContainerType.BOTTLE;
	}
	
	public Soda(String name) {
		super(name);
	}
	
	public void setContainer(ContainerType container) {
		this.container = container;
	}
	
	@Override
	public String toString() {
		String msg = new String();
		msg = super.toString();
		msg += String.format("%n<Soda> container: %s", this.container);
		return msg;
	}
	
	@Override
	public void produce() {
		super.produce();
	}
	
	enum ContainerType{
		CAN,
		BOTTLE
	}
}
