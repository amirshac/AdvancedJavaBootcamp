package VendingMachine.VendingMachine;

import VendingMachine.exeRunner.VendingMachine;

public abstract class Drink implements Produceable{

	// fields
	protected String name;
	protected int price;
	protected int volume;
	protected int temprature;
	protected boolean produced;
	
	// constructor
	public Drink(String name, int price, int volume, int temprature) {
		this.name = name;
		setPrice(price);
		setVolume(volume);
		this.temprature = temprature;
		produced = false;
	}
	
	public Drink(String name) {
		this(name, 10, 50, 10);
	}
	
	public Drink() {
		this("EMPTYDRINK", 0, 0, 0);
	}
	
	// setters

	public void setPrice(int price) {
		if ( price < 0)
			price = 0;
		
		this.price = price;
	}

	public void setVolume(int volume) {	
		if ( volume < 50 )
			volume = 50;
		else if ( volume > 200 )
			volume = 200;
		
		this.volume = volume;
	}

	public void setTemprature(int temprature) {
		this.temprature = temprature;
	}


	@Override
	public void produce() {
		System.out.println("Producing: ");
		System.out.println(this);
		
		if (VendingMachine.waterQtt < this.volume) {
			System.out.println("Not enough water");
			produced = false;
		}else {
			VendingMachine.waterQtt -= this.volume;
			produced = true;	
		}
	}
	
	@Override
	public String toString() {
		String msg = String.format("Drink name:%s, price:%d, volume:%d, temprature:%d %n",
				name, price, volume, temprature);
		return msg;
	}
}
